
<% include ../partials/header%>






<div class="container">
        <h1 class="text-center mb-5">Edit Campground</h1>
        <div class="row justify-content-center">
                <div class="col-8">
                        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">

                        <div class="form-group">
                                <input class="form-control" type="text" value="<%=campground.name%>" name="name" id="">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="number" value="<%=campground.price%>" name="price" min="0.00" step="1.00" id="">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" value="<%=campground.image%>" name="image" id="">
                        </div>
                        <div class="form-group">
                                <input class="form-control" type="text" value="<%=campground.description%>" name="description" id="">
                        </div>
                        <div class="form-group">
                                <button class="btn btn-lg btn-outline-primary btn-block"> Submit</button>
                        </div>
                        
                            
                        </form>
                        <a href="/campgrounds/<%=campground._id%>">
                            <button class="btn btn-outline-info">
                                Go back
                            </button>
                        </a>
                </div>
        </div>
       
        
        
</div>

<%include ../partials/footer%>